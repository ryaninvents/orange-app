<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_unit_system_names"
        android:entryValues="@array/pref_unit_system_values"
        android:key="units_system"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_system_of_units" />
    
    
    <!--EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/empty"
        android:inputType="textCapWords"
        android:key="full_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_full_name" /-->
    
    <EditTextPreference
        android:defaultValue="@string/empty"
        android:key="user_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_name" />
    
    
    <EditTextPreference
        android:capitalize="characters"
        android:defaultValue="@string/empty"
        android:key="user_key"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_key" />
    
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_server"
        android:key="server"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server" />

</PreferenceScreen>
